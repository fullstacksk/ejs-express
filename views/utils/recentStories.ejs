    <div class="d-flex justify-content-center mb-3 mt-3">
        <h1>Recent Stories</h1>
    </div>
    <div class="row">
        <% [1,2,3].forEach(function (el){ %>
            <div class="col-md-4 col-sm-6 col-xs-12 ">
